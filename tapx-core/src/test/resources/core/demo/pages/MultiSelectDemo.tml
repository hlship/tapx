<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter" xmlns:tx="tapestry-library:tapx">

  <t:form>

    <t:label for="colors"/>

    <tx:multipleselect t:id="colors" values="selectedValues" model="model"/>

    <br clear="both"/>

    <input type="submit"/>

  </t:form>


  <br clear="both"/>

  <hr/>

  <p>Selected values:</p>

  <ul>
    <li t:type="loop" source="selectedValues" value="var:x">${var:x}</li>
  </ul>

</t:layout>